/* 水平间距 */
.goods_list {
  padding: 0 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods_list .goods_item {
  background: #fff;
  width: 355rpx;
  margin: 10rpx 0;
  padding: 15rpx;
  box-sizing: border-box;
}
.goods_list .goods_item image {
  width: 80%;
  height: 150px;
  display: block;
  margin: auto;
}
.goods_list .goods_item .price {
  color: #b50e03;
  font-size: 36rpx;
  margin: 20rpx 0 5rpx 0;
  text: nth-child(2);
  text-color: #ccc;
  text-font-size: 28rpx;
  text-margin-left: 17rpx;
  text-text-decoration: line-through;
}
.goods_list .goods_item .name {
  font-size: 28rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
}

