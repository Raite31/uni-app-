/* 水平间距 */
page {
  height: 100%;
}
.pics {
  height: 100%;
  display: flex;
}
.pics .left {
  width: 200rpx;
  height: 100%;
  border-right: 1px solid #eee;
}
.pics .left view {
  height: 60px;
  line-height: 60px;
  color: #333;
  text-align: center;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
}
.pics .active {
  background: #b50e03;
  color: #fff;
}
.right {
  height: 100%;
  width: 520rpx;
  margin: 10rpx auto;
}
.right .item image {
  width: 520rpx;
  height: 520rpx;
  border-radius: 5px;
}
.right .item text {
  font-size: 30rpx;
  line-height: 60rpx;
}

