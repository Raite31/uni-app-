.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.home .nav {
  display: flex;
}
.home .nav .nav_item {
  width: 25%;
  text-align: center;
}
.home .nav .nav_item view {
  width: 120rpx;
  height: 120rpx;
  background: #b50e03;
  border-radius: 60%;
  margin: 10px auto;
  line-height: 120rpx;
  color: #FFFFFF;
  font-size: 50rpx;
}
.home .nav .nav_item .icon-tupian {
  font-size: 45rpx;
}
.home .nav .nav_item text {
  font-size: 30rpx;
}
.home .hot_goods {
  background: #eee;
  overflow: hidden;
  margin-top: 10px;
}
.home .hot_goods .tit {
  height: 50px;
  line-height: 50px;
  color: #b50e03;
  text-align: center;
  letter-spacing: 20px;
  background: #FFF;
  margin: 7rpx 0;
}

